<div class="payments-header">
  <%= link_to(categories_path, class: "back-button") do %>
    <i class="bi bi-chevron-left"></i>
  <% end %>
  <div class="payment-header-container">
    <h1 class="payment-header uppercase-text">New Category</h1>
  </div>
</div>

<div class="categories-new">
  <%= form_with(model: @category, local: true, class: "form") do |form| %>
    <div class="form-group font-light">
      <%= form.label :name, class: "form-name"  %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group font-light">
      <%= form.label :icon, class: "form-name"  %>
      <%= form.select :icon, options_for_select(bootstrap_icon_options, @category.icon), {}, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Category", class: "form-btns font-light" %>
    </div>
  <% end %>
</div>
