<div class="register-container">
  <div class="payments-header">
    <%= link_to unauthenticated_root_path, class: "back-button" do %>
      <i class="bi bi-chevron-left"></i>
    <% end %>
    <div class="payment-header-container">
      <h1 class="payment-header uppercase-text">Register</h1>
    </div>
    <%= button_tag "Next", class: "login", id: "signup-button"  %>
  </div>

  <div class="register">
    <div class="register-header">
      <i class="profile-icon bi bi-person-circle"></i>
      <h4 class="upload-profile font-light">Upload picture</h4>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "signup-form d-flex flex-column"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.text_field :name, autofocus: true, class: "input-1 font-light", placeholder: "Full name" %>
    <%= f.email_field :email, autofocus: true, class: "input-2 font-light", placeholder: "Email" %>
    <%= f.password_field :password, class: "input-3 font-light", placeholder: "Password" %>
    <% end %>
  </div>
</div>

<script>
  document.getElementById("signup-button").addEventListener("click", function() {
    document.querySelector("form").submit();
  });
</script>

