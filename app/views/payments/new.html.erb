<div class="payments-header">
  <%= link_to(category_payments_path(@category), class: "back-button") do %>
    <i class="bi bi-chevron-left"></i>
  <% end %>
  <div class="payment-header-container">
    <h1 class="payment-header uppercase-text">New Payment</h1>
  </div>
</div>

<div class="payments-new">
  <%= form_with(model: [@category, @payment], local: true, class: "form") do |form| %>
    <div class="form-group font-light">
      <%= form.label :name, class: "form-name" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group font-light">
      <%= form.label :amount, class: "form-name" %>
      <%= form.text_field :amount, class: "form-control" %>
    </div>

    <div class="category-form form-group font-light">
      <%= form.label :category, class: "form-name" %>
      <%= form.collection_select :category, @categories, :name, :name, { prompt: "Select a category" }, { class: "category-select" } %>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Payment", class: "form-btns font-light" %>
    </div>
  <% end %>
</div>
